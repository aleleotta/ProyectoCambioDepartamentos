@model clsListadoPersonaDepartamento

<h1>Listado de personas y departamentos</h1>
<br />

<form asp-action="CambioDepartamento">
    <select name="IdDepartamentoSeleccionado">
        <option value="0">Seleccionar...</option>
        @foreach (Entities.clsDepartamento departamento in Model.ListadoDepartamentos)
        {
            <option value="@departamento.Id">@departamento.NombreDept</option>
        }
    </select>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Departamento</th>
                <th>Seleccion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Models.clsPersonaDepartamento persona in Model.ListadoPersonasConDepartamento)
            {
                <tr>
                    <td>@Html.DisplayFor(item => persona.Nombre)</td>
                    <td>@Html.DisplayFor(item => persona.Apellidos)</td>
                    <td>@Html.DisplayFor(item => persona.DepartamentoAsignado.NombreDept)</td>
                    <td>
                        <input type="checkbox" name="IdPersonaSeleccionada" value="@persona.Id"/>
                    </td>
                </tr>
            }
        </tbody>
        <div class="text-center">
            <input type="submit" value="Cambiar departamento" class="btn btn-primary" />
        </div>
    </table>
</form>